<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.delfood.mapper.MenuGroupMapper">

	<resultMap type="menuGroup" id="menuGroupResult">
		<result property="id" column="id"/>
		<result property="name" column="name"/>
		<result property="content" column="content"/>
		<result property="createdAt" column="createdAt"/>
		<result property="updatedAt" column="updatedAt"/>
		<result property="status" column="status"/>
		<result property="priority" column="priority"/>
		<result property="shopId" column="shopId"/>
		<collection property="menus" column="id" javaType="java.util.ArrayList" ofType="menu" select="findMenubyGroupId"></collection>
	</resultMap>

	<sql id="selectMenuGroup">
		SELECT id, name, content, create_at createdAt, updated_at updatedAt, status, priority, shop_id shopId
		FROM MENU_GROUP
	</sql>

	<insert id="insertMenuGroup" parameterType="menuGroup">
		INSERT INTO MENU_GROUP(name, content, shop_id)
		VALUES( #{name}, #{content}, #{shopId})
	</insert>
	
	<select id="nameCheck" resultType="integer">
		SELECT COUNT(name)
		FROM MENU_GROUP
		WHERE name = #{name}
	</select>
	
	<select id="findByShopid" resultType="menuGroup">
		<include refid="selectMenuGroup"></include>
		WHERE shop_id = #{shopId}
		AND status != "DELETED" 
	</select>
	
	<update id="updateNameAndContent">
		UPDATE MENU_GROUP
		SET name = #{name},
		    content = #{content}
		WHERE id = #{id}
	</update>

	<update id="deleteMenuGroup">
		UPDATE MENU_GROUP
		SET status = "DELETED"
		WHERE id = #{id}
	</update>
	
	<sql id="selectMenu">
		SELECT id, name, price, photo, created_at createdAt, updated_at updatedAt, status, priority, content, menuGroupId
		FROM MENU
	</sql>

	<select id="findMenubyGroupId" resultType="menu">
		<include refid="selectMenu"></include>
		WHERE menuGroupId = #{menuGroupId}
		AND status != "DELETED" 
	</select>
	
	<select id="findMenuGroupAndMenus" resultMap="menuGroupResult">
		<include refid="selectMenuGroup"></include>
		WHERE shop_id = #{shopId}
		AND status != "DELETED" 
	</select>
	
</mapper>